<form id="addChapterForm">
    <div class="form-group">
        <label for="chapterName">{{#str}}campaign_add_chapter, block_mission_map{{/str}}</label>
        <input type="text" class="form-control" id="chapterName" name="name" required>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="hasLock" name="has_lock">
            <label class="form-check-label" for="hasLock">
                {{#str}}campaign_locked_chapter, block_mission_map{{/str}}
            </label>
        </div>
    </div>
    <div class="form-group" id="unlockDateGroup" style="display: none;">
        <label for="unlockDate">{{#str}}campaign_unlock_chapter, block_mission_map{{/str}}</label>
        <input type="datetime-local" class="form-control" id="unlockDate" name="unlocking_date">
    </div>
</form>
