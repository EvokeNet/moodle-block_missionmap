{{!
    @template block_mission_map/level
}}
<div class="map level">
    {{#level}}
        <div class="chapter" data-cid="{{chapterid}}" data-plid="{{id}}">
            {{#isEditing}}
                <a href="#" class="btn btn-primary edit_chapter">Edit</a>
            {{/isEditing}}
            <div class="chapter_header">
                <h3>{{name}}</h3>
            </div>
            <img src="{{img}}" />
            {{#sublevels}}
                {{#isEditing}}
                    <div class="mission" data-toggle="tooltip" data-placement="top" title="{{name}}">
                        <div class="mission-tools">
                            <a href={{{url}}} class="btn btn-secondary btn-sm go_level">go</a>
                            <a href={{{editurl}}} class="btn btn-primary btn-sm edit_level">edit</a>
                            <a class="btn btn-danger btn-sm delete_level">&times;</a>
                        </div>
                        <span class="mission-text">
                            {{#isLocked}}
                                <small>{{no}}ðŸ”’</small>
                            {{/isLocked}}
                            {{^isLocked}}
                                {{no}}
                            {{/isLocked}}
                        </span>
                    </div>
                {{/isEditing}}
                {{^isEditing}}
                    {{#isLocked}}
                        <div class="mission" data-toggle="tooltip" data-placement="top" title="{{name}}">
                            <div class="locked"></div>
                            <span class="mission-text">?</span>
                        </div>
                    {{/isLocked}}
                    {{^isLocked}}
                        <a href="{{{url}}}" class="mission" data-toggle="tooltip" data-placement="top" title="{{name}}">
                            <span class="mission-text">
                                {{no}}
                            </span>
                        </a>
                    {{/isLocked}}
                {{/isEditing}}
            {{/sublevels}}
            {{#isEditing}}
                <a href="#" class="btn btn-primary add_sublevel">Add Sublevel</a>
            {{/isEditing}}
        </div>
    {{/level}}
</div>
{{#js}}
    require(['block_mission_map/sublevels'],
        function(module) {
            module.init_add({{{contextid}}});
        }
    );
    require(['block_mission_map/randomizer'],
        function(module) {
            module.init();
        }
    );
{{/js}}