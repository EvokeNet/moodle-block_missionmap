{{!
    @template block_mission_map/map
}}
<div class="map">
    {{#chapters}}
        <div class="chapter">
            <h3>{{name}}</h3>
            {{#levels}}
                <a href="{{url}}" class="mission" data-toggle="tooltip" data-placement="top" title="{{name}}">
                    <span class="mission-text">
                        {{no}}
                    </span>
                </a>
            {{/levels}}
        </div>
    {{/chapters}}
</div>
{{#js}}
    require(['block_mission_map/randomizer'],
        function(module) {
            module.init();
        }
    );
{{/js}}